@page
@using Packt.Shared;
@model Northwind.Web.Pages.CustomersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

}
<style>
    .select-customer
    {
        text-decoration: none;
        border-style: solid
    }
</style>
<div class="row">
    <h1 class="display-2">Customers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Company Name</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Customers is not null)
            {
                @foreach (Customer c in Model.Customers)
                {
                    <tr>
                            <td>@c.CompanyName</td>
                            <td>@c.Country</td>
                            <td>@c.Phone </td>
                            <td><a class="select-customer" asp-page="/AboutCustomer" asp-route-ID="@c.CustomerId">More</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
